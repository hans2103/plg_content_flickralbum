	<copyright>(C) 2025 HKweb</copyright>
	<license>GNU General Public License version 3, or later</license>
	<authorEmail>info@hkweb.nl</authorEmail>
	<authorUrl>hkweb.nl</authorUrl>
	<version>25.26.1</version>
	<description>PLG_CONTENT_FLICKRALBUM_XML_DESCRIPTION</description>
	<namespace path="src">HKweb\Plugin\Content\FlickrAlbum</namespace>

	<files>
		<folder>services</folder>
		<folder plugin="flickralbum">src</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/plg_content_flickralbum.ini</language>
		<language tag="en-GB">en-GB/plg_content_flickralbum.sys.ini</language>
	</languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
					name="flickr_userid"
					type="text"
					label="PLG_CONTENT_FLICKRALBUM_FLICKRUSERID"
					required="true"
				/>
            </fieldset>
        </fields>
    </config>
